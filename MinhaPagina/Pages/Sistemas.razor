@page "/sistemas"
@inject HttpClient Http

<section class="section container">
    <h1>Sistemas</h1>
    <p class="h-sub">Catálogo de soluções que posso entregar e personalizar para o seu negócio.</p>
    <div class="grid">
        @if (sistemas == null)
        {
            <p>Carregando sistemas...</p>
        }
        else
        {
            @foreach (var sistema in sistemas)
            {
                <SystemCard Title="@sistema.Title" Description="@sistema.Description" Stack="@sistema.Stack" Status="@sistema.Status" Category="@sistema.Category" />
            }
        }
    </div>
</section>

@code {
    private List<Sistema>? sistemas;

    protected override async Task OnInitializedAsync()
    {
        sistemas = await Http.GetFromJsonAsync<List<Sistema>>("dados/sistemas.json");
    }
}
