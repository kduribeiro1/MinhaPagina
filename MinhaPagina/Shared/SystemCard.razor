
<div class="card">
  <span class="badge">@Category</span>
  <h3>@Title</h3>
  <p>@Description</p>
  <div class="kpi">
    @if (!string.IsNullOrWhiteSpace(Stack)) { <div class="box">@Stack</div> }
    @if (!string.IsNullOrWhiteSpace(Status)) { <div class="box">@Status</div> }
  </div>
</div>

@code {
  [Parameter] public string Title { get; set; } = "";
  [Parameter] public string Description { get; set; } = "";
  [Parameter] public string Category { get; set; } = "Sistema";
  [Parameter] public string Stack { get; set; } = "";
  [Parameter] public string Status { get; set; } = "";
}
